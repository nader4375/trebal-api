generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  COLLABORATOR
  SELLER
  DISTRIBUTOR_SELLER
  ADMIN
}

enum NftState {
  GIFT
  STACKED
  SPONSORSHIP
  DISTRIBUTION
  RETIRED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  roles        Role[]
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  nftsOwned    Nft[]    @relation("OwnerNfts")
  nftsReceived Nft[]    @relation("RecipientNfts")

  auditEvents  AuditEvent[]
}

model Nft {
  id            String   @id @default(cuid())
  faceValue     Int
  lockedValue   Int
  usableValue   Int
  state         NftState @default(GIFT)
  distributionRemainingValue Int @default(0)

  ownerId       String
  owner         User     @relation("OwnerNfts", fields: [ownerId], references: [id])

  giftedFromId  String?
  giftedFrom    User?    @relation("RecipientNfts", fields: [giftedFromId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AuditEvent {
  id          String   @id @default(cuid())
  actorId     String?
  actor       User?    @relation(fields: [actorId], references: [id])
  type        String
  payloadJson String
  createdAt   DateTime @default(now())
}
